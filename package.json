{
  "name": "code-hack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "prepare": "husky && husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@tiptap/extension-highlight": "^2.4.0",
    "@tiptap/extension-link": "^2.4.0",
    "@tiptap/pm": "^2.4.0",
    "@tiptap/react": "^2.4.0",
    "@tiptap/starter-kit": "^2.4.0",
    "@vercel/speed-insights": "^1.2.0",
    "lucide-react": "^0.395.0",
    "mongoose": "^8.13.2",
    "next": "14.2.2",
    "nprogress": "^0.2.0",
    "react": "^18",
    "react-ace": "^11.0.1",
    "react-dom": "^18",
    "react-hot-toast": "^2.4.1",
    "react-syntax-highlighter": "^15.5.0",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">18"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.4.3",
    "postcss": "^8",
    "prettier": "^3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "sass": "^1.75.0",
    "tailwindcss": "^3.4.1"
  }
}
